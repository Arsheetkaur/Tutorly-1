<% layout('layout/loginBoilerplate') %>

    <!-- Login Section -->
    <section class="login-section">
                <% if (success && success.length > 0) { %>
  <div class="flash-message flash-success">
    <%= success[0] %>
    <span class="flash-close" role="button">&times;</span>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="flash-message flash-error">
    <%= error[0] %>
    <span class="flash-close" role="button">&times;</span>
  </div>
<% } %>
        <div class="container">
            <div class="section-header">
                <h2>Log In to Tutorly</h2>
                <p>Access your AI-powered study companion</p>
            </div>
            
            <div class="login-form">
                <form action="/login" method="POST" id="login-form" novalidate>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your username" required>
                        <span class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                        <span class="error-message"></span>
                    </div>
                    <div class="form-group checkbox-group">
                        <input type="checkbox" id="remember-me" name="remember-me">
                        <label for="remember-me">Remember Me</label>
                    </div>
                    <!-- <div class="form-group forgot-password">
                        <a href="#">Forgot Password?</a>
                    </div> -->
                    <button type="submit" class="btn btn-primary btn-large">Log In</button>
                </form>
                <p class="register-link">Don't have an account? <a href="/register">Sign up</a></p>
            </div>
        </div>
    </section>

